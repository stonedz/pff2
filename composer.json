{
    "name": "stonedz/pff2",
    "type": "pff2-core",
    "description": "A simple yet robust PHP MVC framework",
    "keywords": ["framework"],
    "homepage": "https://github.com/stonedz/pff2",
    "license": "MIT",
    "authors": [
        {
            "name": "Paolo Fagni",
            "email": "paolo.fagni@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "symfony/yaml": "~5.3",
        "symfony/console": "~5.3",
        "swiftmailer/swiftmailer": "5.4.12",
        "ezyang/htmlpurifier": "*",
        "mobiledetect/mobiledetectlib": "2.8.*",
        "pimple/pimple": "~3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~11",
        "codeception/codeception": "*"
    },
    "bin": ["scripts/init", "scripts/pff"],
    "autoload": {
        "psr-4": {
            "pff\\": "src",
            "pff\\modules\\": [
                "src/modules/session",
                "src/modules/url",
                "src/modules/search",
                "src/modules/auth",
                "src/modules/automatic_header_footer",
                "src/modules/config_var",
                "src/modules/cookies",
                "src/modules/default_controller",
                "src/modules/encryption",
                "src/modules/exception_handler",
                "src/modules/htmlpurifier",
                "src/modules/logger",
                "src/modules/mail",
                "src/modules/main_layout",
                "src/modules/mobile_views",
                "src/modules/multilanguage",
                "src/modules/network_helper",
                "src/modules/paypal",
                "src/modules/search",
                "src/modules/session",
                "src/modules/tidy",
                "src/modules/url"

            ]
        }
    }
}
