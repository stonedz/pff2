{
    "name": "stonedz/pff2",
    "type": "pff2-core",
    "description": "A simple yet robust PHP MVC framework",
    "keywords": ["framework"],
    "homepage": "https://github.com/stonedz/pff2",
    "license": "MIT",
    "authors": [
        {
            "name": "Paolo Fagni",
            "email": "paolo.fagni@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "ezyang/htmlpurifier": "*",
        "mobiledetect/mobiledetectlib": "4.8.*",
        "pimple/pimple": "~3.5",
        "php": ">=8.1",
        "swiftmailer/swiftmailer": "5.4.12",
        "symfony/console": "~7",
        "symfony/yaml": "~5.3"
    },
    "require-dev": {
        "codeception/codeception": "*",
        "phpunit/phpunit": "~11",
        "stonedz/pff2-doctrine": "4.0.x-dev",
        "rector/rector": "^1.0"
    },
    "bin": ["scripts/init", "scripts/pff", "scripts/update"],
    "autoload": {
        "psr-4": {
            "pff\\": "src",
            "pff\\modules\\": [
                "src/modules/automatic_header_footer",
                "src/modules/auth",
                "src/modules/config_var",
                "src/modules/cookies",
                "src/modules/default_controller",
                "src/modules/encryption",
                "src/modules/exception_handler",
                "src/modules/htmlpurifier",
                "src/modules/logger",
                "src/modules/mail",
                "src/modules/main_layout",
                "src/modules/mobile_views",
                "src/modules/multilanguage",
                "src/modules/network_helper",
                "src/modules/paypal",
                "src/modules/search",
                "src/modules/session",
                "src/modules/tidy",
                "src/modules/url"

            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "pff\\": "app",
            "pff\\models\\": "app/models",
            "pff\\services\\": "app/services",
            "pff\\controllers\\": "app/controllers"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "ln -s resources/app_skeleton app",
            "ln -s resources/site_skeleton/index.php index.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "stonedz/pff2-installers": true
        }
    }
}
